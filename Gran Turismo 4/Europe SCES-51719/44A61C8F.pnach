// ModelFaces
patch=1,EE,00107334,word,3C013F55 // (x0.8333)

[21:9 Ultrawide Hack]
description=True 21:9 Ultrawide in races
author=Silentwarior112
// Use this to override the 3D Rendering Aspect
patch=1,EE,00A567F8,word,3FA8427E // EB 51 78 3F 00 00 80 3F
// OR change `Aspect` to 1.31 in the secret menu!

// HUD Canvas resizing (Retail uses different values)
patch=1,EE,0039BD0C,word,3C01C36D // (-237) // D5C2013C
patch=1,EE,0039BD18,word,3C01445B // ( 876) // 443A013C

// Text width (Race HUD)
patch=1,EE,0039F84C,word,3C013F12 // (x0.5703125) // 403F013C

// Rear view mirror width adjustment (not needed for 21:9, optional)
//patch=1,EE,0033F0F0,short,0348 // (840) // 8002 0824

// Multiply width multiplier by 1.0666 to maintain the original's width for menus. The mathematically correct number looks too narrow
// Menu Text Width (addresses found by Aero_)
// Dunno why the the bumper cam speedo is off center
patch=1,EE,20492E08,extended,08125666 // j 00495998
patch=1,EE,20495998,extended,3C090061 // lui t1,0x0061 : Widescreen Mode 1st-Half of Memory Address
patch=1,EE,2049599C,extended,352984F0 // ori t1,0x84F0 : Widescreen Mode 2nd-Half of Memory Address
patch=1,EE,204959A0,extended,812A0000 // lb t2,(t1)
patch=1,EE,204959A4,extended,C65A0024 // lwc1 f26,0x24(s2)
patch=1,EE,204959A8,extended,11400004 // beqz t2,0x004959BC : Jumps if Widescreen Mode is Disabled
patch=1,EE,204959AC,extended,3C013F40 // lui at,0x3F40 : Text Width 1st-Half of Float Value
patch=1,EE,204959B0,extended,34210000 // ori at,0x0000 : Text Width 2nd-Half of Float Value
patch=1,EE,204959B4,extended,4481A000 // mtc1 at,f20
patch=1,EE,204959B8,extended,4614D682 // mul.s f26, f26, f20
patch=1,EE,204959BC,extended,08124B83 // j 00492E0C
patch=1,EE,2044DF60,extended,00000000 // nop

// ModelFaces
patch=1,EE,00107334,word,3C013F12 // 403F013C (x0.5703125)

// Loading (320 * New / 16)
patch=1,EE,00102BE0,word,3C0143D2 // A043013C ( 420) - Spinner
